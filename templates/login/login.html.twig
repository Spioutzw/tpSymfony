{% extends "base.html.twig" %}

{% block title %}
	Login
{% endblock %}

{% block body %}
	<!-- This snippet uses Font Awesome 5 Free as a dependency. You can download it at fontawesome.io! -->
	<form method="post">
		{% if app.user %}
			<div class="mb-3">
				You are logged in as
				{{ app.user.username }},
				<a href="{{ path('app_logout') }}">Logout</a>
			</div>
		{% endif %}


		<div class="container">
			<div class="row">
				<div class="col-lg-10 col-xl-9 mx-auto">
					<div class="card card-signin flex-row my-5">
						<div
							class="card-img-left d-none d-md-flex"><!-- Background image for card set in CSS! -->
						</div>
						<div class="card-body">
							<h5 class="card-title text-center">Connexion</h5>
							{% if error %}
								<div class="alert alert-danger">{{ error.messageKey | trans(error.messagedata, 'security') }}</div>
							{% endif %}


							<div class="form-label-group">
								<input type="email" id="inputEmail" name="Email" class="form-control" autofocus autocomplete="email" placeholder="Email" value="{{last_username}}" required>
								<label for="inputEmail">Email</label>
							</div>

							<div class="form-label-group">
								<input type="password" id="inputPassword" class="form-control" name="password" placeholder="Password" required>
								<label for="inputPassword">Password</label>
							</div>

							<input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

							<hr>

							<button class="d-block my-0 mx-auto btn btn-lg btn-primary btn-block text-uppercase" type="submit">Connexion</button>
							<a class="d-block text-center mt-2 small" href="#">S'inscrire</a>


						</div>
					</div>
				</div>
			</div>
		</div>
	</form>
{%  endblock %}
